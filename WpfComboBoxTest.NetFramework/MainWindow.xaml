<Window x:Class="WpfComboBoxTest.NetFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfComboBoxTest.NetFramework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ComboBox SelectedItem="{Binding SelectedValue}" ItemsSource="{Binding Values}" IsEditable="True" />
        <TextBox Text="{Binding SelectedValue}" />
    </StackPanel>
</Window>
